<form name="container-form" class="mt-4" method="post" action="/courses/deletedall">
  <div>
        <h3>Khóa học của tôi</h3>
        <a href="/me/trash/courses">Thùng Rác</a>
        <div class="mt-4">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="checkbox-all">
              <label class="custom-control-label" for="checkbox-all">Chọn Tất Cả</label>
              <button class="btn-sm btn-primary checkall-btn-sumit disabled " name="action">Xóa</button>
            </div>
        </div>
  </div>
    <table class="table">
  <thead>
    <tr>
      <th scope="col " colspan="2">#</th>
      <th scope="col">tên khóa học </th>
      <th scope="col">trình độ</th>
      <th scope="col"colspan='2'>thời gian tạo khóa học</th>
    </tr>
  </thead>
  <tbody>
    {{#each courses}}
    <tr>
      <td> 
        <div class=" form-check">
              <input type="checkbox" class="form-check-input" value="{{this._id}}" name="courseIds[]">
        </div>
      </td>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.name}}</td>
      <td>{{this.lever}}</td>
      <td>{{this.createdAt}}</td>
      <td>
        <a href="/courses/{{this._id}}/edit" class="btn btn-link">Sửa</a>
        <a href="" class="btn btn-link" data-toggle="modal" data-id={{this._id}} data-target="#delete-course-modal">Xóa</a>
      </td>
    </tr>

    {{else}}
    <tr>
      <td conlspan="5" class="text-center"> Bạn chưa đăng khóa học nào!! 
        <a href="/courses/create"> Đăng Kí khóa học</a>
      </td>
      
    </tr>
    {{/each}}
  </tbody>
</table>
</form>

{{!-- Confirm dalete course --}}
<!-- Button trigger modal -->
<div id="delete-course-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Bạn muốn chuyển vào thùng rác ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn chuyển khóa học này vào thùng rác?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course"  type="button" class="btn btn-primary">Xóa bỏ </button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>




    <form name="delete-course-form" method="post"></form>
<script>
 document.addEventListener('DOMContentLoaded', function() {
  var courseitemcheckbox =$('input[name="courseIds[]"]')
  var checkboxall=$('#checkbox-all')
  var courseId;
  var checkallbtnsumit=$('.checkall-btn-sumit')
  var deleteForm = document.forms['delete-course-form'];
  var containerform=document.forms['container-form']
  
  var btnDeleteCourse = document.getElementById('btn-delete-course');

      $('#delete-course-modal').on('show.bs.modal', function (event) {
          var button = $(event.relatedTarget);
        
          courseId = button.data('id'); 
        });

  
  btnDeleteCourse.onclick = function(){
    deleteForm.action = '/courses/' + courseId  + '?_method=DELETE';
    deleteForm.submit()
  };
  

  checkboxall.change(function(){
    var isCheckall=$(this).prop('checked')
    courseitemcheckbox.prop('checked',isCheckall)
    renderCheckallsumitbtn()
  });


  courseitemcheckbox.change(function(){
    var isCheckedall = courseitemcheckbox.length===$('input[name="courseIds[]"]:checked').length
    checkboxall.prop('checked',isCheckedall)
    renderCheckallsumitbtn()
  })
 
checkallbtnsumit.click(function(e){
  e.preventDefault()
  var issubmittable=!$(this).hasClass('disabled')
  if(issubmittable){
    containerform.submit()
  }
})


 function renderCheckallsumitbtn(){
  var checkedcount=$('input[name="courseIds[]"]:checked').length
  if(checkedcount>0){
  checkallbtnsumit.removeClass('disabled')

  }
  else{
    checkallbtnsumit.addClass('disabled')
  }
 }

});


</script>